     @AuraEnabled
    public static List<String> getCommunityHeader(String pageName) {
        
        
        if (pageName.toUpperCase() == 'mytoolbag'.toUpperCase()) {
            
            return  getMyToolboxHeaderTitle();
        }
        else if (pageName.toUpperCase() == 'RegisterNewTool'.toUpperCase()) {
            return getRegisterNewToolHeaderTitle();
            
        }
        else if (pageName.toUpperCase() == 'UserProfile'.toUpperCase()) {
            return getUserProfileTitle();
            
        }
        else{
            return new List<String> {'Header', 'Title'};
        }
           
         
    }
    
    private static List<String> getRegisterNewToolHeaderTitle() {
        String siteLabel = Site.getMasterLabel();

        if (Test.isRunningTest()) {
            siteLabel = 'myryobi';
        }

        String title = Label.myCommunity_RegisterToolTitle.replace('[Brand]', Community_Settings__c.getValues(siteLabel).Brand__c);
        
        String header = Label.myCommunity_RegisterToolHeader;
        String imgURL = Community_Settings__c.getValues(Site.getMasterLabel()).RegisterToolIcon__c;// 'https://cs-ttibrands.cs6.force.com/myRyobi/file-asset/myRYOBI_w_tagline_Final_nocta?v=1';
             
        return new List<String> { header, title, imgURL };
    }
    
    @TestVisible    
    private static List<String> getMyToolboxHeaderTitle(){
        Integer i;
        if(!Test.isRunningTest()) {
            i = ToolBoxListCC.getAssetCount();
        }
        
        String title;
        String header;
        
        if (i>0){
            title = Label.myCommunity_MyToolbag_tools;
        }
        else{
            title = Label.myCommunity_MyToolbag_No_tools;
        }
        
        header= ToolBoxListCC.getRunningContactName();
        if(header.right(1) == 's'){
            header = header + '\'';
        }else{
            header = header + '\'s';
        }
        header = Label.myCommunity_ToolBagHeader.replace('{0}', header);
            
        
        String imgURL=Community_Settings__c.getValues(site.getMasterLabel()).ToolbagIcon__c;
        
        return new List<String> {header, title, imgURL };
        
    }
    
    @TestVisible    
    private static List<String> getUserProfileTitle(){
                     
        String title = 'Update your details.';
        String header;
   
        header= ToolBoxListCC.getRunningContactName();
        if(header.right(1) == 's'){
            header = header + '\'';
        }else{
            header = header + '\'s';
        }
        header = header + ' Profile';
            
        String imgURL=Community_Settings__c.getValues(site.getMasterLabel()).UserProfileIcon__c;
        
        return new List<String> {header, title, imgURL };
        
    }

