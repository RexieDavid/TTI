<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Rejected_Reason</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 ISPICKVAL(Status__c,&apos;Rejected&apos;),
 ISBLANK(TEXT(Rejected_Reason__c))  
)</errorConditionFormula>
    <errorDisplayField>Rejected_Reason__c</errorDisplayField>
    <errorMessage>Complete this field.</errorMessage>
</ValidationRule>
