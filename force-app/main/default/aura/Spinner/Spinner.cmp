<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" access="global" >
	<aura:attribute name="size" type="String" default="slds-spinner_medium" />
	<aura:attribute name="assistiveText" type="String" default="Loading" />
	<aura:attribute name="isVisible" type="Boolean" default="False" />

	<aura:handler event="c:ToggleSpinner" action="{!c.ToggleSpinnerJS}"/>

	<div aura:id="divSpinner" class="slds-hide slds-spinner_container">
		<div role="status" class="{!'slds-spinner slds-spinner_brand ' + v.size}">
			<span class="slds-assistive-text">{!v.assistiveText}</span>
			<div class="slds-spinner__dot-a"></div>
			<div class="slds-spinner__dot-b"></div>
		</div>
	</div>
		
</aura:component>